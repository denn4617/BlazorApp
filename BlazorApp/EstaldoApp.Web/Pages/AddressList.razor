@page "/"
@inherits AddressListBase

<h3>Address List</h3>

<label for='adresse'>Autocomplete af adresse:</label>
<div class='autocomplete-container'>
  <input type="text" list="adresser" id="adresse" @bind="inputVal"
         @oninput="@(async (e) => { inputVal = (String) e.Value; Adresser = await GetAdresses(inputVal);})">
</div>
@if (Adresser != null)
{
    <datalist id="adresser">
        @foreach (var adresse in Adresser)
        {
            Console.WriteLine(adresse.tekst);
            <option value="@adresse.tekst" onclick=""></option>
        }
    </datalist>
}


